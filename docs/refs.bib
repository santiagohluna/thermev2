@article {Leconte2015,
	author = {Leconte, J{\'e}r{\'e}my and Wu, Hanbo and Menou, Kristen and Murray, Norman},
	title = {Asynchronous rotation of Earth-mass planets in the habitable zone of lower-mass stars},
	volume = {347},
	number = {6222},
