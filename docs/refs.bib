@article{rufu_canup_2020,
author = {Rufu, R. and Canup, R. M.},
title = {Tidal Evolution of the Evection Resonance/Quasi-Resonance and the Angular Momentum of the Earth-Moon System},
journal = {Journal of Geophysical Research: Planets},
volume = {125},
